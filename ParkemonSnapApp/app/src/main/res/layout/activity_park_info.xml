<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_park_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.daprlabs.aaron.parkemonsnapapp.ParkInfoActivity">
<android.support.constraint.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@mipmap/parkexample"
            android:id="@+id/parkImage" />

        <View
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textDescription"
            android:background="@android:color/darker_gray"
            android:id="@+id/separationLine" />

        <TextView
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textAddress"
            android:layout_alignParentStart="true"
            android:id="@+id/textDescription"
            tools:text="Park Description" />

        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/parkImage"
            android:layout_alignParentStart="true"
            android:id="@+id/textParkName"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            tools:text="Park Name" />

        <TextView
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textParkName"
            android:layout_alignParentStart="true"
            android:id="@+id/textAddress"
            android:textSize="18sp"
            tools:text="Park Address" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/separationLine"
            android:layout_alignParentStart="true"></LinearLayout>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>